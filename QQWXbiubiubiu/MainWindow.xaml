<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:测试"
        d:DataContext="{d:DesignInstance Type=local:MVVM视图逻辑}"
        mc:Ignorable="d"
    Title="自动发送消息" Height="416" Width="677" Background="#FF616464" Foreground="#FF93D6F6" Icon="/pic/1.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <ScrollViewer 
        HorizontalScrollBarVisibility="Hidden" 
        VerticalScrollBarVisibility="Auto"
            Margin="0">

        <Grid  Height="558" Cursor="" Width="665">
            <Image x:Name="通用图片1" Height="118" Margin="543,2,3,0" VerticalAlignment="Top" Opacity="0.85" Source="/pic/2.png" Cursor="None" Width="119"/>
            <Label x:Name="文字显示1" Content="  QQ /微信自动轰炸 " Height="58" Margin="10,10,0,0" VerticalAlignment="Top" Background="#00F9F9F9" Width="249" FontSize="26" FontWeight="Bold" HorizontalAlignment="Left" Foreground="#E2EDEAEA"/>
            <Label Content="使用前请先阅读readme" HorizontalAlignment="Left" Margin="379,95,0,0" VerticalAlignment="Top" Width="120" Foreground="#F9F1B8B8" MouseLeftButtonDown="事件触发1" FontSize="10" Cursor="Hand"/>
            <Rectangle Height="116" VerticalAlignment="Top" Width="543" Panel.ZIndex="-1" HorizontalAlignment="Left" Margin="0,2,0,0">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="2,2" StartPoint="2,2">
                        <GradientStop Color="Black" Offset="0.574"/>
                        <GradientStop Color="#FF1A1919" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,1.4">
                        <GradientStop Color="#FF312D2D" Offset="0.155"/>
                        <GradientStop Color="#FF030303" Offset="0.431"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock HorizontalAlignment="Left" Height="25" Margin="0,199,0,0" TextWrapping="Wrap" Text="无无无~启动轰炸-消灭敌人" VerticalAlignment="Top" Width="244" Foreground="#FF171717" FontSize="23" FontFamily="AniMe Vision - MB_EN"/>
            <Label Content="启动自动轰炸" HorizontalAlignment="Left" Height="27" Margin="44,227,0,0" VerticalAlignment="Top" Width="115" FontFamily="Arial Black" FontSize="17" Background="{x:Null}" Foreground="#FFA79797" Grid.RowSpan="1" Grid.ColumnSpan="1"/>
            <ToggleButton  x:Name="启动按钮"  Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFEDA6A6" FontSize="30" Margin="568,0,0,318" Checked="启动" Unchecked="暂停" Height="44" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="84"/>
            <Label Content="轰炸次数" HorizontalAlignment="Left" Height="43" Margin="-5,286,0,0" VerticalAlignment="Top" Width="82" FontSize="17"/>
            <TextBox HorizontalAlignment="Left" Height="43" Margin="90,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Text="{Binding 消息次数,  UpdateSourceTrigger=PropertyChanged}" Background="#4CFFFFFF" TextAlignment="Center" VerticalContentAlignment="Center" FontSize="13" />
            <Label Content="轰炸对象" HorizontalAlignment="Left" Height="43" Margin="305,286,0,0" VerticalAlignment="Top" Width="81" FontSize="17"/>
            <TextBox HorizontalAlignment="Left" Height="43" Margin="405,286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218" Text="{Binding 好友名称, UpdateSourceTrigger=PropertyChanged}" Background="#4CFFFFFF" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <Label Content="文件选择" HorizontalAlignment="Left" Height="44" Margin="-5,334,0,0" VerticalAlignment="Top" Width="82" Cursor="" FontFamily="Microsoft YaHei" FontSize="17"/>
            <Button Content="点击我选择文件" HorizontalAlignment="Left" Height="29" Margin="90,338,0,0" VerticalAlignment="Top" Width="114" Click="打开文件框" Cursor="Hand" Background="#66797777"/>
            <Button Content="点击我查看日志" Height="27" Margin="543,485,19,0" VerticalAlignment="Top" Background="#66797777" Click="事件触发2"/>
            <Button Content="程序信息" Margin="0,474,594,35" Background="{x:Null}" Foreground="Black" FontSize="17" Click="事件触发3"/>
            <Label Content="鼠标点击模式" HorizontalAlignment="Left" Height="29" Margin="295,338,0,0" VerticalAlignment="Top" Width="99" FontSize="14"/>
            <ComboBox IsEditable="True" HorizontalContentAlignment="Center" Height="40" Margin="405,338,33,0"   
               VerticalAlignment="Top" Width="218" RenderTransformOrigin="37.58,-7.44"
                      ItemsSource="{Binding 用户选择选项}"
                      DisplayMemberPath="数据对象3"
                      SelectedValuePath="数据对象3"
                      SelectedValue="{Binding 用户选择 ,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      FontSize="17" FontWeight="Bold" Background="#FFABADB3"
                      >

            </ComboBox>
            <Label Content="句柄获取方式" HorizontalAlignment="Left" Height="30" Margin="190,482,0,0" VerticalAlignment="Top" Width="128" FontSize="17"/>
            <ComboBox HorizontalAlignment="Left" Height="31" Margin="305,485,0,0" VerticalAlignment="Top" Width="183"
                      ItemsSource="{Binding 用户选择项2}"
                      DisplayMemberPath="数据对象4"
                      SelectedValuePath="数据对象4"
                      SelectedValue="{Binding 用户选择2,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                      FontSize="17" FontWeight="Bold" Background="#FFABADB3"
                      />



        </Grid>
    </ScrollViewer>
    <Window.Resources>
        <Style TargetType="ToggleButton">

            <Setter Property="Content" Value="启动"/>
            <Style.Triggers>

                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="暂停"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

</Window>
